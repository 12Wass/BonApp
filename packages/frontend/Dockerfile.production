FROM node:14-slim as build

WORKDIR /app

COPY package.json .

RUN yarn install --silent

COPY . .

RUN yarn run build

FROM nginx:alpine

COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/build /usr/share/nginx/html

EXPOSE $REACT_DOCKER_PORT

CMD ["nginx", "-g", "daemon off;"]

